{% extends 'avisota/message/renderer/backend/mce_container.html.twig' %}
{% import "avisota/message/renderer/backend/mce_macros.html.twig" as mce %}

{% set headline = headline|deserialize(true) %}
{% set hl = headline.unit ? headline.unit : 'h1' %}
{% set headline = headline.value %}

{% block content %}
	{% spaceless %}
		{% if headline %}
			<{{ hl }}>{{ headline }}</{{ hl }}>
		{% endif %}
		{% if addImage and (floating == 'above' or floating == 'left' or floating == 'right') %}
			{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
		{% endif %}
		{{ text }}
		{% if addImage and floating == 'below' %}
			{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
		{% endif %}
	{% endspaceless %}
{% endblock %}
